<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dev.app.playground">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".Helper.GlobalState"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ActivityHome"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".ActivityLogin"
            android:theme="@style/myTheme" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ActivityItemDetail"
            android:label="Product Detail" />

        <activity
            android:name=".ActivitySignUp"
            android:label="Join Us" />

        <activity
            android:name=".OrdernowActivity"
            android:theme="@style/popupTheme" />

        <activity
            android:name=".ActivityMyCart"
            android:label="My Cart" />

        <activity
            android:name=".ActivityMyWishlist"
            android:label="My Wishlist" />

        <activity
            android:name=".ActivityMyAccount"
            android:label="My Account" />

        <activity
            android:name=".ActivityMyOrders"
            android:theme="@style/myTheme" />

        <activity
            android:name=".ActivityUpdateAccount"
            android:label="Update Account" />

        <activity
            android:name=".ActivityLegal"
            android:label="Legal" />
        <activity
            android:name=".ActivityMore"
            android:label="" />
        <activity
            android:name=".ActivityCustomer"
            android:label="Help Centre" />

        <activity android:name=".SearchableActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>
</manifest>
